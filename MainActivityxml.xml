<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity"
        tools:layout_editor_absoluteX="-159dp"
        tools:layout_editor_absoluteY="67dp">
        <!--<TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello World!"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />-->
        !--take the input first number-->
        <EditText
            android:id="@+id/editText_first_no"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:layout_marginLeft="220dp"
            android:layout_marginTop="40dp"
            android:inputType="number" />
        <!-- for messege input first number-->
        <TextView
            android:id="@+id/textView_first_no"
            android:layout_width="200dp"
            android:layout_height="25dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="50dp"
            android:text="Enter the Number"
            android:textSize="20dp" />
        <Button
            android:id="@+id/cos_button"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_marginLeft="110dp"
            android:layout_marginTop="200dp"
            android:text="COS" />
        <Button
            android:id="@+id/sin_button"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_marginLeft="210dp"
            android:layout_marginTop="200dp"
            android:text="SIN" />
        <Button
            android:id="@+id/exp_button"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="200dp"
            android:text="EXP" />
        <Button
            android:id="@+id/tan_button"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_marginLeft="310dp"
            android:layout_marginTop="200dp"
            android:text="TAN" />
        <!-- Text view for result view-->
        <TextView
            android:id="@+id/textView_answer"
            android:layout_width="100dp"
            android:layout_height="25dp"
            android:layout_marginLeft="130dp"
            android:layout_marginTop="300dp"
            android:text="0"
            android:textSize="20dp"
            android:textStyle="bold" />

    </RelativeLayout>
</android.support.constraint.ConstraintLayout>